<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="ProgressBarAccent" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--極力styleを少なくする -->
    <style name="Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Title.Small" parent="Title">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="TextNormal">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="TextNormal.Gray" parent="TextNormal">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextNormal.White" parent="TextNormal">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextNormal.Accent" parent="TextNormal">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextSmall">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextSmall.Red" parent="TextSmall">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextSmall.Blue" parent="TextSmall">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="FavoriteCountLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkYellow</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BorderLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="FavoriteStar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">@dimen/favorite_star_padding_end</item>
        <item name="lottie_fileName">FavoriteIcon.json</item>
    </style>

    <style name="InputTextSingleLine" parent="TextNormal">
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
