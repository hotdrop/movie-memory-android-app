<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.movie.edit.MovieEditOverviewFragment">

    <data>
        <variable
            name="movie"
            type="jp.hotdrop.moviememory.model.Movie" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/left_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/guide_line_default_margin" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/right_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/guide_line_default_margin" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_title"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:counterEnabled="false"
                    app:layout_constraintEnd_toStartOf="@id/right_guideline"
                    app:layout_constraintStart_toEndOf="@id/left_guideline"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/InputTextSingleLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/title_label"
                        android:maxLength="200"
                        android:text="@={movie.title}" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/image_preview"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="32dp"
                    android:contentDescription="@string/image_preview_description"
                    android:scaleType="fitXY"
                    app:imageUrl="@{movie.imageUrl}"
                    app:layout_constraintStart_toStartOf="@+id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/text_input_title"
                    tools:src="@drawable/image_default" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_image_url"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:counterEnabled="false"
                    app:counterMaxLength="1000"
                    app:layout_constraintEnd_toStartOf="@id/right_guideline"
                    app:layout_constraintStart_toEndOf="@+id/image_preview"
                    app:layout_constraintTop_toTopOf="@+id/image_preview">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_image_url"
                        style="@style/TextNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/image_url_label"
                        android:maxLength="1000"
                        android:maxLines="2"
                        android:text="@={movie.imageUrl}" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/image_icon_browser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_open_in_browser"
                    android:contentDescription="@string/image_url_search_browser_desc"
                    app:layout_constraintStart_toEndOf="@+id/image_preview"
                    app:layout_constraintTop_toBottomOf="@+id/text_input_image_url" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    style="@style/TextSmall"
                    android:text="@string/image_url_search_browser_desc"
                    app:layout_constraintBottom_toBottomOf="@+id/image_icon_browser"
                    app:layout_constraintEnd_toStartOf="@+id/right_guideline"
                    app:layout_constraintStart_toEndOf="@+id/image_icon_browser"
                    app:layout_constraintTop_toTopOf="@+id/image_icon_browser" />

                <TextView
                    android:id="@+id/category_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/category_label"
                    app:layout_constraintStart_toStartOf="@+id/chip_group_categories"
                    app:layout_constraintTop_toBottomOf="@+id/image_preview" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_categories"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:singleSelection="true"
                    app:layout_constraintEnd_toStartOf="@+id/right_guideline"
                    app:layout_constraintStart_toStartOf="@+id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/category_label" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_overview"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="80dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="1000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/right_guideline"
                    app:layout_constraintStart_toEndOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/chip_group_categories"
                    app:layout_constraintVertical_bias="0.0">

                    <androidx.appcompat.widget.AppCompatEditText
                        style="@style/TextNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/overview_label"
                        android:maxLength="1000"
                        android:maxLines="10"
                        android:text="@={movie.overview}" />

                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_save" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>