<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="jp.hotdrop.moviememory.presentation.movie.detail.MovieDetailActivity">

    <data>
        <import type="jp.hotdrop.moviememory.presentation.util.ColorCalculator" />
        <variable
            name="movie"
            type="jp.hotdrop.moviememory.model.Movie" />
        <variable
            name="toolbarTextColorFactor"
            type="float"
            />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:titleEnabled="false"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="?android:attr/actionBarSize"
                    android:alpha="@{1.0f - toolbarTextColorFactor}"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax">

                    <TextView
                        android:id="@+id/movie_title"
                        style="@style/MovieTitleForDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="@{movie.title}"
                        android:textColor="@color/moveDetailAppBarText"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/image_cover"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="映画タイトルが長いものはどうするか考える必要があるアイウエオですかきくけこ" />

                    <ImageView
                        android:id="@+id/image_cover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:layout_marginEnd="16dp"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitEnd"
                        android:src="@drawable/image_default"
                        app:imageUrl="@{movie.imageUrl}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:textColor="@color/moveDetailAppBarText"
                    app:layout_collapseMode="pin"
                    app:layout_constraintBottom_toTopOf="@+id/image_cover"
                    app:navigationIcon="?attr/homeAsUpIndicator"
                    app:titleTextColor="@{ColorCalculator.calc(toolbarTextColorFactor, @color/moveDetailAppBarText)}"
                    app:title="@{movie.title}"/>

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/coordinatorLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                
                <android.support.constraint.Guideline
                    android:id="@+id/left_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="16dp"/>

                <TextView
                    android:id="@+id/movie_info_label"
                    style="@style/SubTitleLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/movie_info_label"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/line_movie_title"
                    style="@style/LabelBorder"
                    app:layout_constraintTop_toBottomOf="@+id/movie_info_label" />

                <TextView
                    android:id="@+id/movie_playing_date_label"
                    style="@style/ItemLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/movie_playing_date_label"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/line_movie_title" />

                <TextView
                    android:id="@+id/movie_playing_date_text"
                    style="@style/ItemText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@{movie.toTextByPlayingDate()}"
                    app:layout_constraintStart_toEndOf="@+id/movie_playing_date_label"
                    app:layout_constraintTop_toBottomOf="@+id/line_movie_title"/>

                <TextView
                    android:id="@+id/movie_film_director_label"
                    style="@style/ItemLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/movie_film_director"
                    app:layout_constraintTop_toBottomOf="@+id/movie_playing_date_label"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"/>

                <TextView
                    android:id="@+id/movie_overview_label"
                    style="@style/SubTitleLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/movie_overview_title"
                    app:layout_constraintTop_toBottomOf="@+id/movie_film_director_label"
                    app:layout_constraintStart_toStartOf="@id/left_guideline" />

                <View
                    android:id="@+id/line_overview_title"
                    style="@style/LabelBorder"
                    app:layout_constraintTop_toBottomOf="@+id/movie_overview_label" />

                <TextView
                    android:id="@+id/movie_overview_text"
                    style="@style/ItemText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/overview_sample"
                    app:layout_constraintTop_toBottomOf="@+id/line_overview_title"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"/>

            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:scaleType="center"
            app:layout_anchor="@id/app_bar"
            app:layout_anchorGravity="bottom|end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_add" />

    </android.support.design.widget.CoordinatorLayout>
</layout>

